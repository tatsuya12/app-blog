<div class="contents row" >
  <% @blogs.each do |blog| %>
    <div class="row">
      <div class="col s12 m10">
        <div class="card-panel">
          <span><%= blog.user.nickname %></span><br>
          <span><%= blog.title %></span><br>
          <span><%= blog.text %></span></br>
          <div class="waves-effect waves-light btn-small">
            <%= link_to "詳細", "/blogs/#{blog.id}", class: "btn", method: :get %>
            <% if user_signed_in? && current_user.id == blog.user_id %>
              <%= link_to "削除", "/blogs/#{blog.id}", class: "btn", method: :delete %>
              <%= link_to "編集", "/blogs/#{blog.id}/edit", class: "btn", method: :get%>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <% if user_signed_in? %>
  <a href="/blogs/new" class="btn-floating btn-large waves-effect waves-light teal accent-4"><i class="material-icons">add</i></a>
  <% end %>

  <%= paginate(@blogs) %>
</div>
