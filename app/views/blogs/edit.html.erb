<div class="contents row">
  <%= form_tag("/blogs/#{@blog.id}", method: :patch ) do %>
    <h5 class="center-align ">Edit</h5>
    <input placeholder="title" type="text" name="title" value="<%= @blog.title %>" autofocus="true">
    <textarea cols="30" name="text" placeholder="text" rows="10" id="textarea1" class="materialize-textarea"><%= @blog.text %></textarea>
    <label for="textarea1"></label>
    <input type="submit" value="SENT" class="waves-effect waves-light btn">
  <% end %>
</div>






