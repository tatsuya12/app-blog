<div class="contents row">
  <%= form_tag("/blogs/#{@blog.id}", method: :patch ) do %>
    <h3>
      編集する
    </h3>
    <input placeholder="title" type="text" name="title" value="<%= @blog.title %>" autofocus="true">
    <textarea cols="30" name="text" placeholder="text" rows="10"><%= @blog.text %></textarea>
    <input type="submit" value="SENT">
  <% end %>
</div>
